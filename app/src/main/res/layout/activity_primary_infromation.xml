<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        tools:context="com.example.asus.nitolmotors.SignInActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_nitol" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nitol_motors_ltd"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sales_verification_system"
                        android:textColor="#f0252525"
                        android:typeface="sans" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="50dp"
            android:text="Primary Information"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"

            android:typeface="sans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="8dp"

            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/back_sign_in"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"


                android:weightSum="3.5">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Client Name"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:typeface="sans" />


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/edit_text_back_with_border"
                    android:paddingLeft="16dp"
android:id="@+id/clientName"
                    android:textSize="14sp"
                    android:hint="ABDUR RAZZAK"
                    android:typeface="sans" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"



                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"

                android:weightSum="3.5">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Select Branch"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:typeface="sans" />


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/edit_text_back_with_border"
                    android:paddingLeft="16dp"
                    android:id="@+id/branchName"
                    android:textSize="14sp"
                    android:hint="Branch Name"
                    android:typeface="sans" />


              <!--  <RelativeLayout

                    android:layout_width="0dp"

                    android:layout_height="33dp"
                    android:layout_gravity="center"

                    android:layout_marginLeft="16dp"

                    android:layout_weight="2.5"
                    android:background="@drawable/edit_text_back_with_border"
                    android:paddingLeft="16dp"

                    >


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"


                        android:layout_gravity="center"

                        android:text="UTTARA"


                        android:textColor="#b5000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"

                        android:src="@drawable/ic_arrow_drop_down_black_24dp" />


                </RelativeLayout>-->




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:orientation="horizontal"


                android:weightSum="3.5">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Type E.O. ID"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:typeface="sans" />


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/edit_text_back_with_border"
                    android:paddingLeft="16dp"
                    android:id="@+id/eoid"
                    android:hint="20161044"
                    android:textSize="14sp"
                    android:typeface="sans" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"



                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"

                android:weightSum="3.5">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Vehicle Model"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:typeface="sans" />


                <RelativeLayout

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="16dp"

                    android:layout_weight="2.5"
                    android:id="@+id/layout_models"
                    android:background="@drawable/edit_text_back_with_border"
                    android:paddingLeft="16dp"

                    >


                    <TextView

                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_model"
                        android:layout_gravity="center"

                        android:text="SE 1613 CAB"


                        android:textColor="#b5000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"

                        android:src="@drawable/ic_arrow_drop_down_black_24dp" />


                </RelativeLayout>




            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textView_next"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="36dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_back_with_border"
            android:paddingBottom="8dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="8dp"
            android:text="Next"

            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="40dp"
            android:text="Instruction:"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:text="Check all your information correctly before proceed to next steps of this application. "
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="normal"
            android:typeface="sans" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="#000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Logged in: 20161044"
                android:textColor="#000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="Date: 19-Dec-2016"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <View
                    android:layout_width="2px"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:background="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="Time: 1:13 PM"
                    android:textColor="#000"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>